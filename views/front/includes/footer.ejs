<script type="text/javascript">
    // html2canvas
    jQuery(document).ready(function(){
       //screenshot();
        jQuery("#download").click(function(){
            screenshot();
        });
        screenshotDownload();
    });

    function screenshot(){
        html2canvas(document.getElementById("photo"),{allowTaint: true,useCORS: true}).then(function(canvas){
            downloadImage(canvas.toDataURL(),"template.png");
        });
    }

    function downloadImage(uri, filename){
        //console.log(uri)
        var link = document.createElement('a');
        if(typeof link.download !== 'string'){
            window.open(uri);
        }
        else{
            link.href = uri;
            link.download = filename;
            accountForFirefox(clickLink, link);
        }
    }

    function clickLink(link){
        link.click();
    }

    function accountForFirefox(click){
        var link = arguments[1];
        document.body.appendChild(link);
        click(link);
        document.body.removeChild(link);
    }


    function screenshotDownload(){
        html2canvas(document.getElementById("photodownload"),{allowTaint: true,useCORS: true}).then(function(canvas){
            downloadImage(canvas.toDataURL(),"template.png");
        });
    }
</script>