<section class="faq">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                <h2 class="faq-titel">
                    Got questions?
                </h2>
                <p>
                    We've got answers!
                </p>
            </div>
            <div class="col-10 mx-auto">
                <div class="accordion" id="faqExample">
                    <% if(qnas){ %>
                        <% for(var i=0; i< qnas.length; i++) { %>
                            <div class="card">
                                <div class="card-header p-2" id="heading<%=i%>">
                                    <h5 class="mb-0">
                                        <button class="btn btn-link" type="button" data-toggle="collapse"
                                            data-target="#collapse<%=i%>" aria-expanded="true"
                                            aria-controls="collapse<%=i%>">
                                            Q: <%= qnas[i].question %>
                                        </button>
                                    </h5>
                                </div>

                                <div id="collapse<%=i%>" class="collapse <% if(i == 0) { %> show <% } %>"
                                    aria-labelledby="heading<%=i%>" data-parent="#faqExample">
                                    <div class="card-body f-small">
                                        <%- qnas[i].answer %>
                                    </div>
                                </div>
                            </div>
                    <% }} %>
                </div>

            </div>
        </div>
    </div>
</section>

