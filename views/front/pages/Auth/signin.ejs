    $('.emailOnly').on('input',function(event){
					this.value=this.value.replace(/\s+/g,'').toLowerCase();
          var b = this.value;
          console.log(b);	
		});
    $("#email").keyup(function(){
			$('.text-danger').remove(); 
      $('#loginbtn').attr("disabled", false);
      $('#loginbtn').removeClass("disbtn");
			var email = $(this).val();
      var emailReg = /^(([^<>()[\]\\.,;:\s@\"]+(\.[^<>()[\]\\.,;:\s@\"]+)*)|(\".+\"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
      var emailSt = emailReg.test( email );
      if(!emailSt && email.length > 0){
        $('#email').after('<span class="text-danger ">Invalid email format</br></span>'); 
        $('#loginbtn').attr('disabled', true);
        $('#loginbtn').addClass("disbtn");
      }
    });

    $("#password").keyup(function(){
			$('.text-danger').remove(); 
      $('#loginbtn').attr("disabled", false);
      $('#loginbtn').removeClass("disbtn");
			var passwordLength = $(this).val().length;
      if(passwordLength > 0){
        if(passwordLength < 5){   
          console.log(passwordLength);
          $('#password').after('<span class="text-danger">Minimum 5 character required </br></span>'); 
          $('#loginbtn').attr('disabled', true);
          $('#loginbtn').addClass("disbtn");
        }else if(passwordLength > 9){
          $('#password').after('<span class="text-danger">Password Not more than 8 character</br></span>'); 
          $('#loginbtn').attr('disabled', true);
          $('#loginbtn').addClass("disbtn");
        }
      }
    });
  });
  
</script>	