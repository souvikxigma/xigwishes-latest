<script src="https://code.jquery.com/jquery-3.6.0.slim.js" integrity="sha256-HwWONEZrpuoh951cQD1ov2HUK5zA5DwJ1DNUXaM6FsY=" crossorigin="anonymous"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>


<script>
    $(document).ready(function(){

        $("#emailsignup").keyup(function(){
			$('.text-danger').remove(); 
            $('#signup').attr("disabled", false);
            $('#signup').removeClass("disbtn");
            var email = $(this).val();
            var emailReg = /^(([^<>()[\]\\.,;:\s@\"]+(\.[^<>()[\]\\.,;:\s@\"]+)*)|(\".+\"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
            var emailSt = emailReg.test( email );
            //alert(email);
            if(!emailSt && email.length > 0){
                $('#emailsignup').after('<span class="text-danger ">Invalid email format</br></span>'); 
                $('#signup').attr('disabled', true);
                $('#signup').addClass("disbtn");
            }
        });

        $("#passwordsignup").keyup(function(){
			$('.text-danger').remove(); 
            $('#signup').attr("disabled", false);
            $('#signup').removeClass("disbtn");
			var passwordLength = $(this).val().length;
            if(passwordLength > 0){
                if(passwordLength < 5){   
                console.log(passwordLength);
                $('#passwordsignup').after('<span class="text-danger">Minimum 5 character required </br></span>'); 
                $('#signup').attr('disabled', true);
                $('#signup').addClass("disbtn");
                }else if(passwordLength > 9){
                $('#passwordsignup').after('<span class="text-danger">Password Not more than 8 character</br></span>'); 
                $('#signup').attr('disabled', true);
                $('#signup').addClass("disbtn");
                }
            }
        });

        $("#name").keyup(function(){
			$('.text-danger').remove(); 
            $('#signup').attr("disabled", false);
            $('#signup').removeClass("disbtn");
			var name = $(this).val().length;
            if(name == 0){
                $('#name').after('<span class="text-danger">Please insert name</br></span>'); 
                $('#signup').attr('disabled', true);
                $('#signup').addClass("disbtn")
            }
        });
        $("#mobile").keyup(function(){
			$('.text-danger').remove(); 
            $('#signup').attr("disabled", false);
            $('#signup').removeClass("disbtn");
			var mobile = $(this).val().length;
            if(mobile > 0){
            if(mobile != 10){
                $('#mobile').after('<span class="text-danger">Please insert correct mobile no.</br></span>'); 
                $('#signup').attr('disabled', true);
                $('#signup').addClass("disbtn")
            }
        }
        });
       

