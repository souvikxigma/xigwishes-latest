<div class="basic-form-area mg-b-40">
    <div class="container">


        <div class="row">
            <div class="col-lg-12">
                <div class="sparkline12-list shadow-reset mg-t-30">
                    <div class="sparkline12-hd">
                        <div class="main-sparkline12-hd">
                            <h1>Add Contact</h1>
                            <div class="sparkline12-outline-icon">
                                <span class="sparkline12-collapse-link"><i class="fa fa-chevron-up"></i></span>
                                <span><i class="fa fa-wrench"></i></span>
                                <span class="sparkline12-collapse-close"><i class="fa fa-times"></i></span>
                            </div>
                        </div>
                    </div>
                    <div class="sparkline12-graph">
                        <div class="basic-login-form-ad">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="all-form-element-inner">
                                        <%- include('../../includes/alert.ejs') %>
                                            <form action="/contact/add/action" method="POST" enctype="multipart/form-data">
                                               
                                                <div class="form-group-inner">
                                                    <div class="row">
                                                        <div class="col-lg-3">
                                                            <label
                                                                class="login2 pull-right pull-right-pro">Category</label>
                                                        </div>
                                                        <div class="col-lg-9">
                                                            <select class="form-control" name="category" id="category">
                                                                <option selected="true" disabled="disabled">Choose Category</option>
                                                                <% if(categoryList.length){
                                                                    for(var i = 0; i< categoryList.length; i++) {%> 
                                                                    <option value="<%= categoryList[i].id%>">
                                                                    <%= categoryList[i].name%>
                                                                    </option>
                                                                <% } } %>
                                                                
                                                                <option value="3">Both</option>
                                                            </select>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="form-group-inner">
                                                    <div class="row">
                                                        <div class="col-lg-3">
                                                            <label class="login2 pull-right pull-right-pro">Name</label>
                                                        </div>
                                                        <div class="col-lg-9">
                                                            <input type="text" id="name"
                                                                placeholder="Enter your name..." name="name"
                                                                class="form-control" />
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group-inner" id="birthdaydiv">
                                                    <div class="row">
                                                        <div class="col-lg-3">
                                                            <label
                                                                class="login2 pull-right pull-right-pro">Birthday</label>
                                                        </div>
                                                        <div class="col-lg-9">
                                                            <input name="birthday" id="birthday" type="date"
                                                                class="form-control" />
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group-inner" id="anniversarydiv">
                                                    <div class="row">
                                                        <div class="col-lg-3">
                                                            <label
                                                                class="login2 pull-right pull-right-pro">Anniversary</label>
                                                        </div>
                                                        <div class="col-lg-9">
                                                            <input name="anniversary" id="anniversary" type="date"
                                                                class="form-control" />
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group-inner">
                                                    <div class="row">
                                                        <div class="col-lg-3">
                                                            <label class="login2 pull-right pull-right-pro">Company
                                                                Name</label>
                                                        </div>
                                                        <div class="col-lg-9">
                                                            <input name="companyName" id="companyName" type="text"
                                                                class="form-control" />
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group-inner">
                                                    <div class="row">
                                                        <div class="col-lg-3">
                                                            <label
                                                                class="login2 pull-right pull-right-pro">Gender</label>
                                                        </div>
                                                        <div class="col-lg-9">
                                                            <select class="form-control" name="gender" id="gender">
                                                                <option value="male">male</option>
                                                                <option value="female">female</option>
                                                                <option value="others">others</option>
                                                            </select>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group-inner">
                                                    <div class="row">
                                                        <div class="col-lg-3">
                                                            <label
                                                                class="login2 pull-right pull-right-pro">Email</label>
                                                        </div>
                                                        <div class="col-lg-9">
                                                            <input id="email" type="email" name="email"
                                                                class="form-control" />
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group-inner">
                                                    <div class="row">
                                                        <div class="col-lg-3">
                                                            <label
                                                                class="login2 pull-right pull-right-pro">Phone</label>
                                                        </div>
                                                        <div class="col-lg-9">
                                                            <input id="phone" name="mobile" type="tel"
                                                                placeholder="(123) 456-7890" class="form-control" />
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="form-group-inner">
                                                    <div class="row">
                                                        <div class="col-lg-3">
                                                            <label class="login2 pull-right pull-right-pro">Contact
                                                                Pic</label>
                                                        </div>
                                                        <div class="col-lg-9">
                                                            <input id="cpic" type="file"
                                                                name="contactPic"
                                                                class="form-control" />
                                                        </div>
                                                    </div>
                                                </div>



                                                <div class="form-group-inner">
                                                    <div class="login-btn-inner">
                                                        <div class="row">
                                                            <div class="col-lg-3"></div>
                                                            <div class="col-lg-9">
                                                                <div class="login-horizental cancel-wp pull-left">
                                                                    <button class="btn btn-white"
                                                                        type="reset">Reset</button>
                                                                    <button
                                                                        class="btn btn-sm btn-primary login-submit-cs"
                                                                        id="submitButton" type="submit">Submit</button>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>

                                                

                                            </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script
  src="https://code.jquery.com/jquery-3.6.0.slim.js"
  integrity="sha256-HwWONEZrpuoh951cQD1ov2HUK5zA5DwJ1DNUXaM6FsY="
  crossorigin="anonymous"></script>
<script>
    $(document).ready(function(){
        //by defeault all (birthday+anniversary) hide
        $("#anniversarydiv").hide();
        $("#birthdaydiv").hide();
    });

    $('#category').on('change', function() {
        var categoryValue = $('#category').val();
        
        if(categoryValue == 1){
            //1 = birthday, anniversary hide //
            $("#anniversarydiv").hide();
            $("#birthdaydiv").show();

        }else if(categoryValue == 2){
            //2 = anniversary, birthday hide //
            $("#birthdaydiv").hide();
            $("#anniversarydiv").show();
        }else if(categoryValue == 3){
            //both birthday + anniversary
            $("#anniversarydiv").show();
            $("#birthdaydiv").show();
        }
    });
</script>