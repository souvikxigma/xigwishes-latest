<section class="form-area">
    <div class="container">
        <form action="/anniversary/edit/action" method="POST" enctype="multipart/form-data">
        <div class="row d-flex justify-content-center align-items-center">
            <div class="col-md-10">
                <input type="hidden" value="<%= data.id %>" name="anniversaryid" />
                <div class="row mb-3">
                    <div class="col-md-2">
                         <label>Bride Name<span class="c-red">*</span></label> 
                    </div>
                    <div class="col-md-10">
                        <input type="text" class="form-control" id="brideName"
                        placeholder="Enter your brideName..." value="<%= data.brideName %>" name="brideName">
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-2">
                         <label>Groom Name<span class="c-red">*</span></label> 
                    </div>
                    <div class="col-md-10">
                        <input type="text" class="form-control" id="groomName"
                        placeholder="Enter your groomName..." value="<%= data.groomName %>" name="groomName">
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-2">
                         <label>Anniversary Day<span class="c-red">*</span></label> 
                    </div>
                    <div class="col-md-10">
                         <input class="form-control date" name="anniversaryday" value="<%= data.anniversaryday %>" id="anniversaryday" type="date">
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-2">
                         <label>Email<span class="c-red">*</span></label> 
                    </div>
                    <div class="col-md-10">
                        <input id="email" type="email" value="<%= data.email %>" name="email" class="form-control">
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-2">
                         <label>Phone<span class="c-red">*</span></label> 
                    </div>
                    <div class="col-md-10">
                        <input id="phone" value="<%= data.mobile %>" name="mobile" type="tel" placeholder="(123) 456-7890" class="form-control">
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-2">
                         <label>Anniversary Image<span class="c-red">*</span></label> 
                    </div>
                    <div class="col-md-10">
                        <div class="custom-file">
                            <input type="file" class="form-control" type="file" name="anniversaryPic">
                          </div>
                    </div>
                    <div class="col-md-2"></div>
                    <div class="col-md-10">
                            <img src="/uploads/AnniversaryContact/<%=data.anniversaryPic%>" class="img-fluid" style="width:200px;height:200px;"  />

                    </div>

                </div>
                <div class="row mb-3">
                    <div class="col-md-2">
                         
                    </div>
                    <div class="col-md-10">
                        
                        <button type="submit" class="btn btn-secondary">Update</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
    </div>
</section>

