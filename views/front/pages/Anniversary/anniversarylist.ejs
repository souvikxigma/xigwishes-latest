<section class="birthdaylisttable mt-5">
    <div class="container">
        <div class="row">
            <table class="table w-100" id="example">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col" data-field="id">#</th>
                        <th scope="col" data-field="name">brideName</th>
                        <th scope="col" data-field="birthday">groomName</th>
                        <th scope="col" data-field="email">anniversaryday</th>
                        <th scope="col" data-field="email">Email</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(var i=0; i< data.length; i++) { %>
                        <tr>
                            <td scope="row">
                                <%= (i+1) %>
                            </td>
                            <td>
                                <%= data[i].brideName %>
                            </td>
                            <td>
                                <%= data[i].groomName %>
                            </td>
                            <td>
                                <%= data[i].anniversaryday %>
                            </td>
                            <td>
                                <%= data[i].email %>
                            </td>
                            <td>
                                <a class="btn btn-primary btn-sm"
                                href="/anniversary/edit/<%=data[i].id%>">
                                <i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                                <a class="btn btn-danger btn-sm"
                                onclick="return confirm('Are you sure you want to delete this anniversary?')"
                                href="/anniversary/delete/<%=data[i].id%>">
                                <i class="fa fa-trash-o" aria-hidden="true"></i></a>
                            </td>
                        </tr>
                    <% } %>

                </tbody>
            </table>
        </div>
    </div>
</section>
<hr />