<div class="main-panel" id="main-panel">
    <!-- Navbar -->
    <%- include('../../includes/navbar.ejs') %>
        <!-- End Navbar -->
        <div class="panel-header panel-header-sm">
        </div>
        <div class="content">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">All Sub Events</h4>
                            <a href="/admin/sub-event/add" class="btn btn-info">Add Sub Events</a>
                            
                        </div>
                        <div class="card-body">
                            <div class="">
                                <table class="display" id="table_id">
                                    <thead class="table-dark">
                                        <th>
                                            #
                                        </th>
                                        <th>
                                            Event Name
                                        </th>
                                        <th>
                                            Event Name
                                        </th>
                                        <th>
                                            Sub Event Image
                                        </th>
                                        <th>
                                            Action
                                        </th>
                                        
                                    </thead>
                                    <tbody>
                                        <% for(var i=0; i< data.length; i++) { %>
                                        <tr>
                                            <td>
                                                <%= (i+1) %>
                                            </td>
                                            <td>
                                               
                                                <%= data[i].category.name %>
                                            </td>
                                            <td>
                                               
                                                <%= data[i].subcategoryTitle %>
                                            </td>
                                            <td>
                                               
                                                <img class="img-fluid" style="width: 90px;"
                                                                    src="/uploads/sample/<%= data[i].subcategoryImage %>">
                                            </td>
                                            <td>
                                                <a class="btn btn-primary btn-sm"  href="/admin/sub-event/edit/<%=data[i].id%>" >Edit</a>
                                                <a class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this sub event?')" href="/admin/sub-event/delete/<%=data[i].id%>" >Delete</a>
                                                <a class="btn btn-primary btn-sm" target="_blank"  href="/temp/review/download/1/<%=data[i].subcategoryUniqueCode%>/2" >Preview</a>
                                                
                                            </td>
                                            
                                        </tr>
                                        <% } %>
                                        
                                        
                                        
                                       
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        
        <footer class="footer">
            <div class=" container-fluid ">

                <div class="copyright" id="copyright">
                    &copy;
                    <script>
                        document.getElementById('copyright').appendChild(document.createTextNode(new Date().getFullYear()))
                    </script>, Designed by <a href="javascript:void(0)">Xigmapro</a>. Coded by <a
                        href="javascript:void(0)">Admin</a>.
                </div>
            </div>
        </footer>
</div>