<div class="main-panel" id="main-panel">
  <!-- Navbar -->
  <%- include('../../includes/navbar.ejs') %>
    <!-- End Navbar -->
    <div class="panel-header panel-header-sm">

    </div>
    <div class="content">
      <div class="row">
        <div class="col-md-12">
          <div class="card">
            <div class="card-header">
              <h5 class="title">Cms Edit</h5>
              <a class="btn btn-dark" href="/admin/cms">Back</a>
            </div>
            <div class="card-body">
              <%- include('../../includes/alert.ejs') %>
                <form action="/admin/cms/edit/action/<%=data.id%>" method="POST">
                  <div class="row">

                    <div class="col-md-12">
                      <div class="form-group">
                        <label>Type</label>
                        <select class="form-control" name="type" id="type">
                          <option selected="true" disabled="disabled">Choose Events</option>
                          <option <% if(data.type==='about' ){ %> selected <% } %> value="about">About Us</option>
                          <option <% if(data.type==='contact' ){ %> selected <% } %> value="contact">Contact Us</option>
                          <option <% if(data.type==='support' ){ %> selected <% } %> value="support">Support</option>
                          <option <% if(data.type==='policy' ){ %> selected <% } %> value="policy">Privacy Policy
                          </option>
                          <option <% if(data.type==='terms' ){ %> selected <% } %> value="terms">Terms & Condition
                          </option>
                          <option <% if(data.type==='cancelation' ){ %> selected <% } %> value="cancelation">Cancelation
                              Refund</option>
                        </select>
                      </div>
                    </div>
                    <div class="col-md-12">
                      <div class="form-group">
                        <label>Description</label>
                        <textarea name="description" class="form-control summernote"><%= data.description %></textarea>
                      </div>
                    </div>

                  </div>
                  <!-- <input type="hidden" name="id" value="<%=data.id%>" /> -->
                  <button class="btn btn-success" type="submit">Submit</button>
                </form>
            </div>
          </div>
        </div>

      </div>
    </div>
