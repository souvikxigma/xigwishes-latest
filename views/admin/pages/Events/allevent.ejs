<div class="main-panel" id="main-panel">
    <!-- Navbar -->
    <%- include('../../includes/navbar.ejs') %>
        <!-- End Navbar -->
        <div class="panel-header panel-header-sm">
        </div>
        <div class="content">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title"> All Events</h4>
                            <a href="/admin/event/add" class="btn btn-info">Add Events</a>
                            <!-- <a href="/admin/event/add-festival-name" class="btn btn-info">Add Festival Events</a> -->
                            
                        </div>
                        <div class="card-body">
                            <div class="">
                                <table class="display" id="table_id">
                                    <thead class="table-dark">
                                        <th>
                                            #
                                        </th>
                                        <th>
                                            Event
                                        </th>
                                        <th>
                                            Action
                                        </th>
                                        
                                    </thead>
                                    <tbody>
                                        <% for(var i=0; i< data.length; i++) { %>
                                        <tr>
                                            <td>
                                                <%= (i+1) %>
                                            </td>
                                            <td>
                                                <%= data[i].name %>
                                            </td>
                                            <td>
                                                <a class="btn btn-primary btn-sm"  href="/admin/event/edit/<%=data[i].id%>" >Edit</a>
                                               <a class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this event?')" href="/admin/event/delete/<%=data[i].id%>" >Delete</a>
                                               <% if(data[i].name === 'Festival'){ %>
                                                <a class="btn btn-primary btn-sm"  href="/admin/event/festival/<%=data[i].id%>" >Festival</a>
                                               <% } %>
                                            </td> 
                                            
                                        </tr>
                                        <% } %>
                                        
                                        
                                        
                                       
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        
        <footer class="footer">
            <div class=" container-fluid ">

                <div class="copyright" id="copyright">
                    &copy;
                    <script>
                        document.getElementById('copyright').appendChild(document.createTextNode(new Date().getFullYear()))
                    </script>, Designed by <a href="javascript:void(0)">Xigmapro</a>. Coded by <a
                        href="javascript:void(0)">Admin</a>.
                </div>
            </div>
        </footer>
</div>